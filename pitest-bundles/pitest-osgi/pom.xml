<?xml version="1.0"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>pitest-bundles</artifactId>
    <groupId>org.pitest</groupId>
    <version>1.4.0</version>
  </parent>
  <artifactId>pitest-osgi</artifactId>
  <name>pitest-osgi</name>
  <packaging>bundle</packaging>
  <version>1.4.0</version>
  <dependencies>
  	<dependency>
      <groupId>org.pitest</groupId>
      <artifactId>pitest</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.testng</groupId>
          <artifactId>testng</artifactId>
        </exclusion>
        <exclusion>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Import-Package>!com.thoughtworks.xstream.*,!com.bea.xml.stream.*,!joptsimple.*,!net.sf.cglib.proxy.*,!nu.xom.*,!org.xmlpull.*,!org.dom4j.*,!org.apache.bsf.*,!org.codehaus.jettison.*,!org.joda.time.*,!org.kxml2.*,!sun.misc,!sun.reflect,!org.junit.*,!junit.*,!org.testng.*,!com.ctc.wstx.stax.*,!org.jdom.*,!org.jdom2.*,*</Import-Package>
            <Export-Package>org.pitest.mutationtest,org.pitest.util,org.pitest.testng,org.pitest.testapi,org.pitest.project,org.pitest.mutationtest.statistics,org.pitest.mutationtest.tooling,org.pitest.mutationtest.engine,org.pitest.functional.predicate,org.pitest.mutationtest.config,org.pitest.functional,org.pitest.classinfo,org.pitest.classpath,org.pitest.coverage,org.pitest.mutationtest.incremental,org.pitest.plugin</Export-Package>
            <Embed-Dependency>*;inline=true</Embed-Dependency>
            <Require-Bundle>system.bundle</Require-Bundle>
	    <_noee>true</_noee>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
